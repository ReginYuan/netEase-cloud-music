.swiper {
	height: 300rpx;
	width: 100%;
}
.swiper-item {
	display: block;
	width: 100%;
	height: 300rpx;
	line-height: 300rpx;
	text-align: center;
}
.swiper-item-image {
	width: 100%;
}
.page-recommend {
	display: flex;
	flex-direction: column;
	padding: 0 10rpx;
	box-sizing: border-box;
}
.page-recommend-text {
	font-size: 32rpx;
	margin: 40rpx 0;
}
.page-recommend-list {
	/* display: flex;
	flex-direction: column; */
}
.page-recommend-list-item {
	flex: 1;
	display: inline-block;
	width: 33%;
	height: 320rpx;
	padding: 0 1%;
	box-sizing: border-box;
	margin-bottom: 10rpx;
	overflow: hidden;
}
.page-recommend-list-item-image {
	width: 100%;
	border-radius: 3%;
	height: 220rpx;
}
.page-recommend-list-item-text {
	font-size: 20rpx;
}
